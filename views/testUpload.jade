html
	head
		script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js", type="text/javascript")
		script(src="http://js.api.olp.yahooapis.jp/OpenLocalPlatform/V1/jsapi?appid=nishioka", type="text/javascript")
		script(src="javascripts/upload.js", type="text/javascript")
		link(href="stylesheets/icon.css", rel="stylesheet")
	body
		block content
		h1= title
		p Welcome to #{title}
		


			p 名前：
				input#name(type='text',name="name")
			p 住所：
				input#address(type='text',name="address")
			select#iconlist
				
			p アイコン：
				input#icon(type='text',name="icon")
			p 説明：
				input#comment(type='text',value="",name="comment")
			
			p USER：
				input#user(type='text',value=1,name="userid") 
				
			p 緯度経度：
				input#geom(type='text',value="ST_GeomFromText('POINT(-71.060316 48.432044)', 4326)",name="geom")
			input#submit(type='submit',value="submit")
		#map